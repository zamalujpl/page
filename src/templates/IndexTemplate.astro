---
const { items } = Astro.props;
---

<div
  class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 bg-bsse-200 w-full"
>
  {
    items.map((item) => (
      <a
        href={item.href}
        class="card bg-bsse-200 border border-gray-200 shadow-xl transition-transform hover:scale-105 block hover:no-underline"
      >
        <figure class="px-4 pt-4">
          <img
            src={item.imgSrc}
            alt={item.imgAlt}
            class="max-w-[180px] max-h-[180px] object-contain rounded"
          />
        </figure>
        <div class="card-body items-center text-center p-4">
          <div class="card-actions">
            <span class="btn btn-outline btn-primary btn-sm mt-2">
              {item.buttonText}
            </span>
          </div>
        </div>
      </a>
    ))
  }
</div>
