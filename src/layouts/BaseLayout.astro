---
import Head from "../components/Head.astro";
import Navbar from "../components/Navbar.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
import "../styles.css";

const {
  title,
  description = "",
  children,
  bodyClass = "",
  showSidebar = true,
  headContent,
} = Astro.props;
---

<html lang="pl" data-theme="light">
  <Head title={title} description={description} />
  <!-- Global styles are imported in the frontmatter (styles.css) -->
  <body
    class={`font-sans text-base-content flex flex-col min-h-screen ${bodyClass}`}
  >
    <Navbar />
    <div
      class="flex flex-col md:flex-row flex-1 w-full min-h-0 px-3 sm:px-4 lg:px-6 gap-4 md:gap-6"
    >
      {showSidebar && <Sidebar />}
      <main class="flex-1 flex flex-col items-center min-h-0">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
