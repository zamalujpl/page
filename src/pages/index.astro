---
import "../styles.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import assets from "../assets.json";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Wszystkie obrazki</title>
    <script src="/js/protection.js" is:inline></script>
  </head>
  <body class="bg-white min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-1 flex flex-col">
      <main class="flex-1 flex flex-col pt-32 bg-white">
        <h1 class="text-4xl font-bold text-center mb-10 text-primary">
          Wszystkie obrazki
        </h1>
        <div class="container mx-auto px-4 flex-1 flex flex-col bg-white">
          {
            Object.entries(assets).map(([catKey, cat]) => (
              <div class="mb-12">
                <h2 class="text-2xl font-semibold mb-4 text-center">
                  <a href={`/${catKey}/`} class="link link-primary">
                    {cat.title_key ?? catKey}
                  </a>
                </h2>
                <div class="flex flex-wrap justify-center gap-6">
                  {cat.items.map((item) => (
                    <div class="card w-60 bg-white !bg-white border border-gray-200 shadow-xl transition-transform hover:scale-105">
                      <figure class="px-4 pt-4">
                        <a href={`/${catKey}/${item.key}`}>
                          <img
                            src={`/${item.file}`}
                            alt={item.key}
                            class="max-w-[180px] max-h-[180px] object-contain rounded"
                          />
                        </a>
                      </figure>
                      <div class="card-body items-center text-center p-4">
                        <h3 class="card-title text-base font-medium">
                          {item.key}
                        </h3>
                        <div class="card-actions">
                          <a
                            href={`/${catKey}/${item.key}`}
                            class="btn btn-outline btn-primary btn-sm mt-2"
                          >
                            Zobacz
                          </a>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
      </main>
      <Footer />
    </main>
  </body>
</html>
