---
import "../styles.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import assets from "../assets.json";
import Head from "../components/Head.astro";

// Helper to get a random item from an array
function getRandomItem(arr) {
  return arr[Math.floor(Math.random() * arr.length)];
}
---

<html lang="en">
  <Head title="Wszystkie obrazki" />
  <body class="bg-white min-h-screen flex flex-col" style="color: #5e5e5e;">
    <Navbar />
    <main class="flex-1 flex flex-col">
      <main class="flex-1 flex flex-col pt-32 bg-white">
        <div class="container mx-auto px-4 flex-1 flex flex-col bg-white">
          <div class="flex flex-wrap justify-center gap-6 bg-white w-full">
            {
              Object.entries(assets).map(([catKey, cat]) => {
                const randomItem = getRandomItem(cat.items);
                const catTitle = cat.title_key ?? catKey;
                return (
                  <div class="card w-60 bg-white !bg-white border border-gray-200 shadow-xl transition-transform hover:scale-105 mb-12">
                    <figure class="px-4 pt-4">
                      <img
                        src={`/${randomItem.file}`}
                        alt={randomItem.key}
                        class="max-w-[180px] max-h-[180px] object-contain rounded"
                      />
                    </figure>
                    <div class="card-body items-center text-center p-4">
                      <div
                        class="font-bold text-lg mb-2"
                        style="color: #5e5e5e;"
                      >
                        {catTitle}
                      </div>
                      <div class="card-actions" style="color: #5e5e5e;">
                        <a
                          href={`/${catKey}/`}
                          class="btn btn-outline btn-primary btn-sm mt-2"
                        >
                          Zobacz
                        </a>
                      </div>
                    </div>
                  </div>
                );
              })
            }
          </div>
        </div>
      </main>
      <Footer />
    </main>
  </body>
</html>
