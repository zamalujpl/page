---
import "../styles.css";
import assets from "../../assets.json";
import Navbar from "../../components/Navbar.astro";
const cat = assets["lego"];
const title = cat.title_key
  ? cat.title_key.replace(/_/g, " ").replace(/\b\w/g, (l) => l.toUpperCase())
  : "lego".replace(/_/g, " ").replace(/\b\w/g, (l) => l.toUpperCase());
---

<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <main class="flex-1 flex flex-col">
      <h1 class="text-4xl font-bold text-center mb-10 text-primary">
        {title}
      </h1>
      <div class="container mx-auto px-4 flex-1 flex flex-col">
        <div class="mb-12">
          <div class="flex flex-wrap justify-center gap-6">
            {
              cat.items.map((item) => (
                <div class="card w-60 bg-base-100 shadow-xl transition-transform hover:scale-105">
                  <figure class="px-4 pt-4">
                    <a href={`/${cat.title_key ?? "lego"}/${item.key}`}>
                      <img
                        src={`/${item.file}`}
                        alt={item.key}
                        class="max-w-[180px] max-h-[180px] object-contain rounded"
                      />
                    </a>
                  </figure>
                  <div class="card-body items-center text-center p-4">
                    <h3 class="card-title text-base font-medium">
                      {item.key
                        .replace(/_/g, " ")
                        .replace(/\b\w/g, (l) => l.toUpperCase())}
                    </h3>
                    <div class="card-actions">
                      <a
                        href={`/${cat.title_key ?? "lego"}/${item.key}`}
                        class="btn btn-outline btn-primary btn-sm mt-2"
                      >
                        Zobacz
                      </a>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
