---
const contentFiles = await import.meta.glob('../content/kolorowanki/*.json');
const categories = await Promise.all(
  Object.values(contentFiles).map(async (importer) => {
    const module = await importer();
    return module.default;
  })
);
---

<aside
  class="hidden sm:block w-48 sm:w-52 md:w-60 lg:w-64 xl:w-72 bg-bsse-200 p-3 md:p-4 mt-6 md:mt-12 no-print sidebar-responsive"
  aria-label="Kategorie kolorowanek"
>
  <ul class="menu menu-vertical rounded-box">
    {
      categories.map((cat) => (
        <li>
          <a
            href={`/${cat.category_slug}/`}
            class="font-semibold transition-colors duration-200 hover:bg-primary hover:text-white rounded px-2 py-1"
          >
            {cat.category_title}
          </a>
        </li>
      ))
    }
  </ul>
</aside>
