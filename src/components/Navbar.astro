---
import assets from "../assets.json";
---

<style>
  @media print {
    nav.navbar {
      display: none !important;
    }
  }
  .navbar-brand {
    font-family: "Inter", sans-serif;
    color: #5e5e5e;
    font-size: 20px;
  }
</style>
<nav
  class="navbar bg-base-200 shadow mb-0 px-0 py-4 flex items-center z-50 border-b border-gray-100 min-h-0 h-20 relative"
>
  <div class="navbar-start flex items-center gap-1 h-full">
    <a href="/" class="flex items-center gap-1 min-h-0 h-full relative">
      <div
        class="bg-white rounded-full shadow-xl flex items-center justify-center absolute left-0 z-10 ml-6"
        style="height:112px;width:112px;bottom:0;transform:translateY(50%);"
      >
        <img
          src="/assets/logo-128x128.png"
          alt="Pokoloruj Mnie Logo"
          class="h-24 w-24 object-contain"
        />
      </div>
      <span class="navbar-brand text-logo font-bold tracking-tight ml-40"
        >Zamaluj.pl</span
      >
    </a>
  </div>
</nav>
