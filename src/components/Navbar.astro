---
import assets from "../assets.json";
---

<style>
  .navbar-brand {
    font-family: "Inter", sans-serif;
    color: #5e5e5e;
    font-size: 20px;
  }
</style>
<div class="drawer drawer-end md:hidden">
  <input id="drawer-toggle" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <nav
      class="navbar bg-bsse-200 shadow mb-0 px-0 py-0 sm:py-2 flex items-center z-50 border-b border-gray-100 min-h-0 h-20 sm:h-24 relative"
    >
      <div class="navbar-start flex items-center gap-1 h-full">
        <a href="/" class="flex items-center gap-1 min-h-0 h-full relative">
          <div
            class="bg-bsse-200 rounded-full shadow-xl flex items-center justify-center mr-3 h-20 w-20 sm:h-24 sm:w-24 md:h-28 md:w-28"
          >
            <img
              src="/assets/logo-128x128.png"
              alt="Pokoloruj Mnie Logo"
              class="h-20 w-20 sm:h-24 sm:w-24 md:h-28 md:w-28 object-contain"
            />
          </div>
          <span
            class="navbar-brand text-logo font-bold tracking-tight ml-2 sm:ml-4 md:ml-6"
            >Zamaluj.pl</span
          >
        </a>
      </div>
      <div class="navbar-end flex-1 flex justify-end items-center gap-2">
        <label for="drawer-toggle" class="btn btn-square btn-ghost md:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
      </div>
    </nav>
  </div>
  <div class="drawer-side z-50">
    <label
      for="drawer-toggle"
      class="drawer-overlay bg-black/70 backdrop-blur-sm transition-opacity"
    ></label>
    <aside
      class="menu p-4 w-64 min-h-full bg-base-100 text-base-content shadow-2xl border-r border-base-300 relative"
    >
      <div class="flex items-center justify-between mb-4">
        <span class="font-bold text-lg">Kategorie</span>
        <button
          class="btn btn-sm btn-ghost"
          aria-label="Zamknij menu"
          onclick="document.getElementById('drawer-toggle').checked = false"
        >
          ✕
        </button>
      </div>
      <ul class="menu menu-vertical rounded-box">
        {
          Object.entries(assets).map(([objectKey, cat]) => (
            <li>
              <a
                href={`/${objectKey}/`}
                class="font-semibold text-gray-800 transition-colors duration-200 hover:bg-primary hover:text-white rounded px-2 py-1"
                onclick="document.getElementById('drawer-toggle').checked = false"
              >
                {cat.title_key}
              </a>
            </li>
          ))
        }
      </ul>
    </aside>
  </div>
</div>
<nav
  class="navbar bg-base-100 shadow mb-0 px-0 py-3 lg:py-4 items-center z-50 border-b border-gray-100 min-h-0 h-20 relative hidden md:flex"
>
  <div class="navbar-start flex items-center gap-1 h-full">
    <a
      href="/"
      class="flex items-center gap-1 min-h-0 h-full relative"
      aria-label="Zamaluj.pl - strona główna"
    >
      <div
        class="bg-base-100 rounded-full shadow-xl flex items-center justify-center absolute left-0 z-10 ml-4 lg:ml-6 h-24 w-24 lg:h-28 lg:w-28 bottom-0 translate-y-1/2"
      >
        <img
          src="/assets/logo-128x128.png"
          alt="Pokoloruj Mnie Logo"
          class="h-full w-full object-contain p-1"
        />
      </div>
      <span
        class="navbar-brand text-logo font-bold tracking-tight ml-32 lg:ml-40"
        >Zamaluj.pl</span
      >
    </a>
  </div>
</nav>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const themeToggle = document.getElementById("theme-toggle");
    // Default to light if no theme is set
    let savedTheme = localStorage.getItem("theme");
    if (!savedTheme) {
      savedTheme = "light";
      localStorage.setItem("theme", "light");
    }
    document.documentElement.setAttribute("data-theme", savedTheme);
    themeToggle.checked = savedTheme === "dark";

    themeToggle.addEventListener("change", function () {
      const newTheme = themeToggle.checked ? "dark" : "light";
      document.documentElement.setAttribute("data-theme", newTheme);
      localStorage.setItem("theme", newTheme);
    });
  });
</script>
