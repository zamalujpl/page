---
import "../../styles.css";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
const image = {
  key: "{{imageKey}}",
  file: "{{imagePath}}",
  category: "{{category}}",
};
const title = image.key
  .replace(/_/g, " ")
  .replace(/\b\w/g, (l) => l.toUpperCase());
const year = new Date().getFullYear();
---

<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body class="bg-gray-50  flex flex-col">
    <Navbar />
    <main class="flex-1 flex flex-col items-center justify-center">
      <div class="w-full max-w-2xl flex flex-col items-center mt-10">
        <img
          src={"/" + image.file}
          alt={title}
          id="main-image"
          class="max-w-full max-h-[80vh] mb-6"
        />
        <button
          onclick="window.print()"
          class="no-print btn btn-outline btn-primary btn-sm mb-8"
        >
          Drukuj obrazek
        </button>
        <a
          href="javascript:history.back()"
          class="no-print text-blue-600 hover:underline">Back</a
        >
      </div>
    </main>
    <div class="print-footer">
      <div
        style="display: flex; align-items: center; justify-content: center; gap: 12px;"
      >
        <img
          src="/assets/logo-compact.svg"
          alt="Pokoloruj Mnie Logo"
          style="height: 24px;"
        />
        <span style="font-weight: 600; font-size: 16px;">Pokoloruj Mnie</span>
        <span style="color: #888; font-size: 14px;">www.pokolorujmnie.pl</span>
      </div>
    </div>
    <Footer />
  </body>
</html>
